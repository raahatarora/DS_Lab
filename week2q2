#include <iostream>
using namespace std;

struct SparseMatrixElement {
    int row;
    int column;
    int value;
};

int main() {
    int n;
    cout << "Enter the size of the matrix (n x n): ";
    cin >> n;
    
    int matrix[100][100]; 
    cout << "Enter the matrix values:" << endl;
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            cin >> matrix[i][j];
        }
    }

    
    SparseMatrixElement arr[n * n];
    int counter = 0, values = 0;

   
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if (matrix[i][j] != 0) {
                values++;
                arr[counter].value = matrix[i][j];
                arr[counter].column = j;
                arr[counter++].row = i;
            }
        }
    }

  
    arr[0].value = values;
    
    
    cout << "Number of non-zero elements: " << values << endl;
    cout << "Row\tColumn\tValue" << endl;
    for (int i = 0; i < values; i++) {
        cout << arr[i].row << "\t" << arr[i].column << "\t" << arr[i].value << endl;
    }

    return 0;
}
